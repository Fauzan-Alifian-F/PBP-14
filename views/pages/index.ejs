<%- include('../partials/header') %>

<main class="container mx-auto px-4 py-8">
    <h1 class="text-4xl font-bold mb-8">Welcome to Our Library</h1>
    
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mb-8">
        <div class="bg-white p-6 rounded-lg shadow-md">
            <h2 class="text-2xl font-bold mb-4">Library Stats</h2>
            <p class="text-lg">Total Books: <%= bookCount %></p>
            <p class="text-lg">Total Authors: <%= authorCount %></p>
        </div>
        
        <div class="bg-white p-6 rounded-lg shadow-md">
            <h2 class="text-2xl font-bold mb-4">Recent Additions</h2>
            <ul class="space-y-2">
                <% recentBooks.forEach(book => { %>
                    <li>
                        <p class="font-bold"><%= book.title %></p>
                        <p class="text-gray-600">by <%= book.author.name %></p>
                    </li>
                <% }) %>
            </ul>
        </div>
    </div>
</main>

<%- include('../partials/footer') %>
