<%- include('../partials/header') %>

<main class="container mx-auto px-4 py-8">
    <h1 class="text-4xl font-bold mb-8">Our Books Collection</h1>
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        <% books.forEach(book => { %>
            <div class="bg-white p-6 rounded-lg shadow-md">
                <h2 class="text-xl font-bold mb-2"><%= book.title %></h2>
                <p class="text-gray-600 mb-2">by <%= book.author.name %></p>
                <p class="text-gray-500">Published in <%= book.publishYear %></p>
                <% if (book.description) { %>
                    <p class="mt-2 text-gray-700"><%= book.description %></p>
                <% } %>
            </div>
        <% }) %>
    </div>
</main>

<%- include('../partials/footer') %>