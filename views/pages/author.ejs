<%- include('../partials/header') %>

<main class="container mx-auto px-4 py-8">
    <h1 class="text-4xl font-bold mb-8">Our Authors</h1>
    
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        <% authors.forEach(author => { %>
            <div class="bg-white p-6 rounded-lg shadow-md">
                <h2 class="text-2xl font-bold mb-2"><%= author.name %></h2>
                <% if (author.bio) { %>
                    <p class="text-gray-700 mb-4"><%= author.bio %></p>
                <% } %>
                <div>
                    <h3 class="font-bold text-lg mb-2">Books:</h3>
                    <ul class="list-disc list-inside">
                        <% author.books.forEach(book => { %>
                            <li class="text-gray-600"><%= book.title %> (<%= book.publishYear %>)</li>
                        <% }) %>
                    </ul>
                </div>
            </div>
        <% }) %>
    </div>
</main>

<%- include('../partials/footer') %>